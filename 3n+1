num = int(input('Enter a number: '))
i = 0

num_list = []
while num != 1: 
    if (num % 2) == 1:
        num = (3 * num) +1
        
        i += 1
        num_list.append(num)
        
    else:
        num = num / 2
        num_list.append(num)
        i += 1
        
      
print('Number of steps ' + str(i))

print('Highest number ' + str(max(num_list)))    
